Name:		@PACKAGE_NAME@
Version:	@VERSION@
Release:	1%{?dist}
Summary:	ODF Validator

Group:      Development/Tools
License:	MPL-2.0
URL:		https://www.ossii.com.tw/git/OSSIIDEV/odfvalidator-lib.git
Source0:	@PACKAGE@-%{version}.tar.gz

BuildRequires:	gcc
Requires:	java

%description

%package	devel
Summary:    Development files for %{name}
Requires:	%{name} = %{version}
%description	devel


%prep
%setup -q -n @PACKAGE@-%{version}


%build
%configure --enable-shared --enable-static --disable-debug
make %{?_smp_mflags}


%install
rm -rf $RPM_BUILD_ROOT
%make_install
rm -f $RPM_BUILD_ROOT/%{_libdir}/*.la


%files
%{_bindir}/odfchecker
%{_bindir}/odfvalidator
%{_libdir}/*.so.*
%{_datadir}/java/odfvalidator-lib/*.jar

%files devel
%{_includedir}/odfvalidator-lib/*.hpp
%{_libdir}/*.so
%{_libdir}/*.a


